[Unit]
Description={{project_name}} Celery Flower Service
After=network.target

[Service]
Type=simple
WorkingDirectory={{django_base_dir}}
ExecStart=/usr/bin/python3 -m pipenv run python -m celery flower -A {{project_name}} --address={{flower_ip_address}} --port={{flower_port}} --basic_auth={{flower_user}}:{{flower_password}}
ExecStop=/bin/kill -9 $MAINPID
Restart=always

[Install]
WantedBy=multi-user.target
